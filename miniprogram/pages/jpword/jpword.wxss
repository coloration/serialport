.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.word-box {
  flex: 1;
  padding-left: 10%;
  width: 100%;
}

.button-box {
  display: flex;
  width: 100vw;
  justify-content: space-around;
}

.roman {
  margin-right: 5px;
}

.jp-word {
  font-size: 100rpx;
  background: #f5f5f5;
  display: flex;
  width: 100%;
}

.read, .zh-word {
  padding-left: 5rpx;
  color: #999;
}